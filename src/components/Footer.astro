---
import { Icon } from 'astro-icon/components';
import Socials from '@components/Socials.astro';
---

<footer class="footer">
  <a href="mailto:louie@louierichardson.com" class="contact-link">
    Get in touch <Icon name="arrow-up-right" />
  </a>
  <Socials />
</footer>

<style lang="scss">
  .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    opacity: 0.85;
  }

  .contact-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    font-weight: 400;

    svg {
      width: 1rem;
      height: 1rem;
      margin-left: 0.25rem;
      transition: transform 200ms;
    }

    &:hover,
    &:focus {
      svg {
        transform: translate(0.15rem, -0.15rem);
      }
    }
  }
</style>
