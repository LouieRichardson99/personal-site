---
import Layout from '@components/Layout.astro';
import { Image } from 'astro:assets';
import { Content } from '@markdown/homepage.md';
import codegardenImage1 from '@assets/codegarden-group-1.jpeg';
import codegardenImage2 from '@assets/codegarden-group-2.jpeg';
import ukFestImage1 from '@assets/uk-fest-image-1.jpeg';
import ukFestImage2 from '@assets/uk-fest-image-2.jpeg';
import ukFestImage3 from '@assets/uk-fest-image-3.jpeg';
---

<Layout
  metaTitle="Louie Richardson"
  metaDescription="I'm Louie, a web developer who's passionate about creating neat stuff for the web that drives results."
>
  <section class="container">
    <div class="rich-text flow">
      <Content />
    </div>
    <div class="image-grid">
      <Image
        src={ukFestImage2}
        alt="Speaking at Umbraco UK Festival"
        width={ukFestImage2.width}
        height={ukFestImage2.height}
        class="span-3"
        loading="eager"
      />
      <Image
        src={ukFestImage1}
        alt="Speaking at Umbraco UK Festival"
        width={ukFestImage1.width}
        height={ukFestImage1.height}
        loading="eager"
        class="sm-hidden"
      />
      <Image
        src={codegardenImage1}
        alt="Bump team at CodeGarden 2023"
        width={codegardenImage1.width}
        height={codegardenImage1.height}
        class="span-2"
        loading="eager"
      />
      <Image
        src={codegardenImage2}
        alt="Codegarden 2024 group"
        width={codegardenImage2.width}
        height={codegardenImage2.height}
        class="span-2"
        loading="eager"
      />
      <Image
        src={ukFestImage3}
        alt="Speaking at Umbraco UK Festival"
        width={ukFestImage3.width}
        height={ukFestImage3.height}
        loading="lazy"
        class="span-4"
      />
    </div>
  </section>
</Layout>

<style lang="scss">
  @use '@styles/_breakpoints' as *;

  .image-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
    margin: 3rem 0 0;

    @include mq(small) {
      grid-template-columns: repeat(4, 1fr);
    }

    .sm-hidden {
      display: none;

      @include mq(small) {
        display: block;
      }
    }

    .span-2 {
      grid-column: span 1;

      @include mq(small) {
        grid-column: span 2;
      }
    }

    .span-3 {
      grid-column: span 2;

      @include mq(small) {
        grid-column: span 3;
      }
    }

    .span-4 {
      grid-column: span 2;

      @include mq(small) {
        grid-column: span 4;
      }
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 5px;
    }
  }
</style>
