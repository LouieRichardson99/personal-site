---
import LinkComponent from '@components/Link.astro'
import type { InternalLink } from '@types'

interface Props {
  node: {
    children: { _type: string; text: string }[]
    markDef: { newTab?: boolean; internal?: InternalLink; external?: string }
  }
}

const {
  node: {
    children,
    markDef: { newTab, internal, external }
  }
} = Astro.props
---

<LinkComponent external={external} internal={internal} newTab={newTab}>
  {children[0].text}
</LinkComponent>
