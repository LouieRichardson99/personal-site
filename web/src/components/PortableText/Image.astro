---
import urlFor from '@utils/urlFor'
import type { Image as IImage } from '@types'

interface Props {
  node: IImage
}

const { node } = Astro.props
---

<div class="img-container">
  <img src={urlFor(node).url()} alt={node.alt} />
</div>

<style>
  .img-container {
    padding: 2rem 0;
  }

  img {
    width: 100%;
    border-radius: 5px;
    object-fit: contain;
  }
</style>
